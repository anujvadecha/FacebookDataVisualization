html
	script.
		function none() {
			x=document.getElementById('none');
			if (x.style.display === "none") {
				document.getElementById('videos1').style.display="none";
				document.getElementById('numstatsvideos').style.display="none";
				x.style.display = "none";
			} 
			else 
			{
			x.style.display = "none";
			}
			}
		function videostats() {
			x=document.getElementById('numstatsvideos');
			if (x.style.display === "none") {
				document.getElementById('videos1').style.display="none";
				x.style.display = "block";
			}
			else
			{
			x.style.display = "none";
			}
			}
		function videodetails() {
			x=document.getElementById('videos1');
			if (x.style.display === "none") {
				document.getElementById('numstatsvideos').style.display="none";
				x.style.display = "block";
			}
			else
			{
			x.style.display = "none";
			}
			}
